        - var i_compare_prod = 0, i_compare_attr = 0;
        - var prodLen = products.length, attrLen = Object.keys(products[0].attributes).length;

        section.compare
            .wrap
                .container-fluid()
                    h2.page-heading Compare products

                    .compare__container
                        .compare__attrs
                            .compare-attr
                                .compare-attr__cell X
                                .compare-attr__cell Image
                                .compare-attr__cell Title
                                .compare-attr__cell Price
                                .compare-attr__cell Controls
                                - for (attrKey in products[0].attributes)
                                    .compare-attr__cell()=attrKey

