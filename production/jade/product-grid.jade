        // two tabs needed!

        section.product-grid
            .wrap
                .container-fluid
                    .product-grid__container
                        - for (var i_upsell_accessories = 0; i_upsell_accessories < products.length; i_upsell_accessories++)
                            .product-grid__item
                                .grid-product
                                    .grid-product__container
                                        .grid-product__image-wrap
                                            .grid-product__controls.control-pad
                                                .control-pad__controls
                                                        .control-pad__item(
                                                            class='control-pad__item--cart butt-add-to-cart'
                                                        )
                                                        .control-pad__item(
                                                            class='control-pad__item--wishlist butt-add-to-wishlist'
                                                        )
                                                        .control-pad__item(
                                                            class='control-pad__item--compare butt-add-to-compare'
                                                        )
                                            img.grid-product__image(
                                                src='#{ products[i_upsell_accessories].photos[0] }'
                                            )
                                        a.grid-product__title(
                                            href='/product.html'
                                        )= products[i_upsell_accessories].title
                                        .grid-product__price= '$' + products[i_upsell_accessories].price

