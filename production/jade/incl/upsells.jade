//- inc: upsells

- for (var i_upsells = 0; i_upsells < products.length; i_upsells++)
    .upsell-grid__box-item
        .product-in-grid(
            data-product-id=products[i_upsells].id
        )
            .product-in-grid__container
                .product-in-grid__image-wrap
                    .product-in-grid__controls.control-pad
                        .control-pad__controls
                            .control-pad__item.control-pad__item--cart
                                .control-pad__icon.control-pad__icon--cart(
                                    class='butt-add-to-cart'
                                )
                            .control-pad__item.control-pad__item--wishlist
                                .control-pad__icon.control-pad__icon--wishlist(
                                    class='butt-add-to-wishlist'
                                )
                            .control-pad__item.control-pad__item--compare
                                .control-pad__icon.control-pad__icon--compare(
                                    class='butt-add-to-compare'
                                )
                    img.product-in-grid__image(
                        src='#{ products[i_upsells].photos[0] }'
                    )
                a.product-in-grid__title(
                    href=rootPath + 'product.html'
                )= products[i_upsells].title
                .product-in-grid__price= '$' + products[i_upsells].price

