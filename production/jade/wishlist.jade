        //- two tabs needed!

        section.wishlist
            .wrap
                .container-fluid()
                    .wishlist__container
                        .product-grid
                            .product-grid__container
                                - for (var i_wl = 0; i_wl < products.length; i_wl++)
                                    .product-grid__item(
                                    data-product-id=products[i_wl].id
                                    )
                                        .grid-product
                                            .grid-product__container
                                                .grid-product__image-wrap
                                                    .grid-product__controls.control-pad
                                                        .control-pad__controls
                                                            .control-pad__item.control-pad__item--cart
                                                                .control-pad__icon.control-pad__icon--cart(
                                                                class='butt-add-to-cart'
                                                                )
                                                            .control-pad__item.control-pad__item--wishlist
                                                                .control-pad__icon.control-pad__icon--wishlist.control-pad__icon--in-wishlist(
                                                                class='butt-add-to-wishlist'
                                                                )
                                                            .control-pad__item.control-pad__item--compare
                                                                .control-pad__icon.control-pad__icon--compare(
                                                                class='butt-add-to-compare'
                                                                )
                                                    img.grid-product__image(
                                                    src='#{ products[i_wl].photos[0] }'
                                                    )
                                                a.grid-product__title(
                                                href='/product.html'
                                                )= products[i_wl].title
                                                .grid-product__price= '$' + products[i_wl].price

