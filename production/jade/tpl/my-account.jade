                .my-account-nav
                    .my-account-nav__container

                        ul.my-account-nav__list(
                            class='nav nav-tabs'
                        )

                            li.my-account-nav__item(
                                class='active'
                            )
                                a.my-account-nav__link(
                                    data-toggle='tab'
                                    href='#tab-my-profile'
                                ) My profile

                            li.my-account-nav__item
                                a.my-account-nav__link(
