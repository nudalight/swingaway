                                a.my-account-nav__link(
                                    data-toggle='tab'
                                    href='#tab-my-orders'
                                ) My orders

                            li.my-account-nav__item
                                a.my-account-nav__link(
                                    data-toggle='tab'
                                    href='#tab-my-payments'
                                ) Payment settings



                .my-account-content
                    .my-account-content__container(
                        class='tab-content'
                    )

                        #tab-my-profile.my-account-content__content(
                            class='tab-pane active'
                        )
                            include ../incl/my-account.profile.jade

                        #tab-my-wishlist.my-account-content__content(
                            class='tab-pane'
                        )
                            include ../incl/my-account.wishlist.jade

                        #tab-my-reviews.my-account-content__content(
                            class='tab-pane'
                        )
                            include ../incl/my-account.reviews.jade

