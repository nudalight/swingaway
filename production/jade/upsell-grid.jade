        //- two tabs needed!

        section.upsell-grid
            .wrap
                .container-fluid()

                    .upsell-grid__headline
                        ul.upsell-grid__tab-list(
                            class='nav nav-tabs'
                        )

                            li.upsell-grid__tab-item(
                                class='active'
                            )
                                a.upserll-grid__tab-link(
                                    data-toggle='tab',
                                    href='#tab-accessories'
                                ) Accessories

                            li.upsell-grid__tab-item
                                a.upserll-grid__tab-link(
                                    data-toggle='tab',
                                    href='#tab-parts'
                                ) Parts

                    .upsell-grid__content(
                        class='tab-content'
                    )
                        #tab-accessories.upsell-grid__box.upsell-grid__box--accessories(
                            class='tab-pane active carousel-upsell-accessories'
                        )
                            - for (var i_upsell_accessories = 0; i_upsell_accessories < products.length; i_upsell_accessories++)
                                .upsell-grid__box-item
                                    .grid-product
                                        .grid-product__container
                                            .grid-product__image-wrap
                                                .grid-prduct__controls.controls
                                                    .controls__add-to-cart.butt-add-to-cart
                                                    .controls__add-to-cart.butt-add-to-compare
                                                    .controls__add-to-cart.butt-add-to-wishlist
                                                img.grid-product__image(
                                                    src='#{ products[i_upsell_accessories].photos[0] }'
                                                )
                                            a.grid-product__title(
                                                href='/product.html'
                                            )= products[i_upsell_accessories].title
                                            .grid-product__price= '$' + products[i_upsell_accessories].price


                        #tab-parts.upsell-grid__box.upsell-grid__box--parts(
                            class='tab-pane carousel-upsell-parts'
                        ) PARTS

